<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.mybatis.test">
    
    
    <select id="getShopping" parameterType="int" resultMap="getShoppingMap">
        select * from user u, shopping s  where s.user_id = user.id and s.user_id=#{id}
    </select>
    
    <resultMap type="Shopping" id="getShoppingMap">
        <id property="id" column="id"/>   
        <result property="name" column="c_name"/>
        <association property="user" javaType="User">   
            <id property="id" column="id"/>
            <result property="name" column="name"/>
        </association>
    </resultMap>
    
    <select id="getUser" parameterType="int" resultType="User">
        select id ,name from user where id =#{id}
    </select>
</mapper>
